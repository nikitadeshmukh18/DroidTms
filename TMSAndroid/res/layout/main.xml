<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Login"
            android:id="@+id/button" android:layout_gravity="right"
            android:onClick="loginForConductor"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source :"
            android:id="@+id/textView" android:layout_gravity="left|center_vertical" android:textSize="30dp"/>
    <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner" android:layout_gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination : "
            android:id="@+id/textView1" android:layout_gravity="left|center_vertical" android:textSize="30dp"/>
    <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner1" android:layout_gravity="center"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/button1" android:layout_gravity="center"/>
</LinearLayout>

